<table width="610" align="center" cellpadding="0" cellspacing="0" border="0" style="width: 610px;">
    <tbody>
        <tr>
            <td height="58" style="font-size: 1px; line-height: 58px;">
                &nbsp;
                <div style="z-index: 90;"></div>
            </td>
        </tr>
        <tr>
            <td
                style="font-family: 'Open Sans', Arial, sans-serif; line-height: 1.1; color: #151515; font-size: 36px; font-weight: 800; text-align: center;">
                Certificate Issuance
            </td>
        </tr>
        <tr>
            <td height="26" style="font-size: 1px; line-height: 26px;">
                &nbsp;
                <div style="z-index: 90;"></div>
            </td>
        </tr>
        <tr>
            <td
                style="color: #151515; font-family: 'Open Sans', Arial, sans-serif; font-size: 14px; line-height: 23px; text-align: left;">
                <strong>Hi <%=recipientName%>,</strong>
            </td>
        </tr>
        <tr>
            <td
                style="color: #151515; font-family: 'Open Sans', Arial, sans-serif; font-size: 14px; line-height: 23px; text-align: justify;">

                <div><b>Following are the details:</b></div>
                <div>
                    <table class="certificate-details" style="table-layout: fixed;width: 300px;">
                        <tr>
                            <td>Course Name :</td>
                            <td><%=courseName%></td>
                        </tr>
                        <tr>
                            <td>Issued By :</td>
                            <td><%=issuerName%></td>
                        </tr>
                        <tr>
                            <td>Issued to :</td>
                            <td><%=recipientName%></td>
                        </tr>
                        <tr>
                            <td>Issuer Address :</td>
                            <td><%=issuerAddress%></td>
                        </tr>
                    </table>
                </div>
                <div><b> Please <a href="<%=url%>">click here</a>, to check issued certificate. </b></div>

                <div style="margin-top:20px; font-weight:700;">
                    Thanks <br>
                    <%=closingText%>
                </div>
            </td>
        </tr>
    </tbody>
</table>